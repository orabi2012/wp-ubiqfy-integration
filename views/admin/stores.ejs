<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/common.css" rel="stylesheet">
    <link href="/css/navbar.css" rel="stylesheet">
    <link href="/css/clients.css" rel="stylesheet">
</head>

<body>
    <% const pageTitle="Admin - Stores" %>
        <%- include('../shared/navbar') %>

            <div class="container-fluid mt-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt me-1"></i>Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <i class="fas fa-store me-1"></i>Store Management
                        </li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h2 class="mb-0">
                                            <i class="fas fa-store me-2 text-primary"></i>
                                            Store Management
                                        </h2>
                                        <p class="text-muted mb-0">Manage all wp stores</p>
                                    </div>
                                    <div class="col-auto">
                                        <a href="/admin/stores/add" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Add Store
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stores Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <% if (stores && stores.length> 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Store Details</th>
                                                    <th>Owner</th>
                                                    <th>Status</th>
                                                    <th>Products</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% stores.forEach(function(store) { %>
                                                    <tr>
                                                        <td>
                                                            <div>
                                                                <strong>
                                                                    <%= store.wp_store_name %>
                                                                </strong><br>
                                                                <small class="text-muted">URL: <%= store.wp_store_url %>
                                                                </small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <%= store.wp_owner_name %><br>
                                                                    <small class="text-muted">
                                                                        <%= store.wp_owner_email %>
                                                                    </small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <% if (store.is_active) { %>
                                                                <span class="badge bg-success">Active</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">Inactive</span>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-info">
                                                                <%= store.total_products_synced || 0 %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group" role="group">
                                                                <a href="/admin/stores/<%= store.id %>/edit"
                                                                    class="btn btn-sm btn-outline-primary"
                                                                    title="Edit Store">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                                <% if (store.is_active) { %>
                                                                    <button type="button"
                                                                        class="btn btn-sm btn-outline-warning"
                                                                        onclick="toggleStore('<%= store.id %>', false)"
                                                                        title="Deactivate">
                                                                        <i class="fas fa-pause"></i>
                                                                    </button>
                                                                    <% } else { %>
                                                                        <button type="button"
                                                                            class="btn btn-sm btn-outline-success"
                                                                            onclick="toggleStore('<%= store.id %>', true)"
                                                                            title="Activate">
                                                                            <i class="fas fa-play"></i>
                                                                        </button>
                                                                        <% } %>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="text-center py-4">
                                            <i class="fas fa-store fa-3x text-muted mb-3"></i>
                                            <h5>No stores found</h5>
                                            <p class="text-muted">Start by adding your first store</p>
                                            <a href="/admin/stores/add" class="btn btn-primary">
                                                <i class="fas fa-plus me-2"></i>Add First Store
                                            </a>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/bootstrap-init.js"></script>
            <script src="/js/admin-management.js"></script>
</body>

</html>