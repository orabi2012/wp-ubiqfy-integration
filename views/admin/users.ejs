<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/common.css" rel="stylesheet">
</head>

<body>
    <% const pageTitle="Admin - Users" %>
        <%- include('../shared/navbar') %>

            <div class="container-fluid mt-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt me-1"></i>Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <i class="fas fa-users me-1"></i>User Management
                        </li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h2 class="mb-0">
                                            <i class="fas fa-users me-2 text-success"></i>
                                            User Management
                                        </h2>
                                        <p class="text-muted mb-0">Manage system users and store assignments</p>
                                    </div>
                                    <div class="col-auto">
                                        <a href="/admin/users/add" class="btn btn-success">
                                            <i class="fas fa-user-plus me-2"></i>Add User
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <% if (users && users.length> 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>User Details</th>
                                                    <th>Role</th>
                                                    <th>Assigned Store</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% users.forEach(function(userItem) { %>
                                                    <tr>
                                                        <td>
                                                            <div>
                                                                <strong>
                                                                    <%= userItem.username %>
                                                                </strong><br>
                                                                <small class="text-muted">
                                                                    <%= userItem.email %>
                                                                </small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <% if (userItem.isSuperadmin) { %>
                                                                <span class="badge bg-danger">Super Admin</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-primary">User</span>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (userItem.assignedStoreId) { %>
                                                                <% const assignedStore=stores.find(s=> s.id ===
                                                                    userItem.assignedStoreId) %>
                                                                    <% if (assignedStore) { %>
                                                                        <small>
                                                                            <%= assignedStore.wp_store_name %>
                                                                        </small>
                                                                        <% } else { %>
                                                                            <small class="text-muted">Store not
                                                                                found</small>
                                                                            <% } %>
                                                                                <% } else { %>
                                                                                    <small class="text-muted">No store
                                                                                        assigned</small>
                                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (userItem.isActive) { %>
                                                                <span class="badge bg-success">Active</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">Inactive</span>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group" role="group">
                                                                <a href="/admin/users/<%= userItem.id %>/edit"
                                                                    class="btn btn-sm btn-outline-primary"
                                                                    title="Edit User">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                                <% if (!userItem.isSuperadmin) { %>
                                                                    <% if (userItem.isActive) { %>
                                                                        <button type="button"
                                                                            class="btn btn-sm btn-outline-warning"
                                                                            onclick="toggleUser('<%= userItem.id %>', false)"
                                                                            title="Deactivate">
                                                                            <i class="fas fa-user-slash"></i>
                                                                        </button>
                                                                        <% } else { %>
                                                                            <button type="button"
                                                                                class="btn btn-sm btn-outline-success"
                                                                                onclick="toggleUser('<%= userItem.id %>', true)"
                                                                                title="Activate">
                                                                                <i class="fas fa-user-check"></i>
                                                                            </button>
                                                                            <% } %>
                                                                                <% } %>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="text-center py-4">
                                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                            <h5>No users found</h5>
                                            <p class="text-muted">Start by adding your first user</p>
                                            <a href="/admin/users/add" class="btn btn-success">
                                                <i class="fas fa-user-plus me-2"></i>Add First User
                                            </a>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/bootstrap-init.js"></script>
            <script src="/js/admin-management.js"></script>
</body>

</html>