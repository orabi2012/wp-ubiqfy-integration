<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/common.css" rel="stylesheet">
    <link href="/css/edit-page.css" rel="stylesheet">
    <link href="/css/navbar.css" rel="stylesheet">
    <link href="/css/users.css" rel="stylesheet">
</head>

<body>
    <% const pageTitle="User Management" %>
        <%- include('../shared/navbar') %>

            <div class="container-fluid mt-2 px-3">
                <div class="row">
                    <div class="col-12">
                        <!-- Breadcrumb Navigation -->
                        <nav aria-label="breadcrumb" class="mb-3">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">User Management</li>
                            </ol>
                        </nav>

                        <!-- Modern Navigation Bar -->
                        <div class="card shadow-sm border-0 mb-4">
                            <div class="card-body p-0">
                                <div class="bg-gradient-primary text-white p-3 rounded-top">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h4 class="mb-0">
                                                <i class="fas fa-users me-2"></i>
                                                User Management
                                            </h4>
                                        </div>
                                        <div class="col-auto">
                                            <a href="/users/add" class="btn btn-light btn-sm">
                                                <i class="fas fa-plus me-1"></i>
                                                Add User
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <nav class="nav nav-pills nav-fill modern-nav">
                                    <a href="/clients"
                                        class="nav-link text-white d-flex align-items-center justify-content-center py-3"
                                        data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage wp stores">
                                        <i class="fas fa-store fa-lg me-2"></i>
                                        <span class="fw-semibold">Stores</span>
                                    </a>
                                    <a href="/users"
                                        class="nav-link text-white d-flex align-items-center justify-content-center py-3 active"
                                        data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage users">
                                        <i class="fas fa-users fa-lg me-2"></i>
                                        <span class="fw-semibold">Users</span>
                                    </a>
                                    <a href="/purchase-orders"
                                        class="nav-link text-white d-flex align-items-center justify-content-center py-3"
                                        data-bs-toggle="tooltip" data-bs-placement="bottom"
                                        title="Manage purchase orders">
                                        <i class="fas fa-shopping-cart fa-lg me-2"></i>
                                        <span class="fw-semibold">Purchase Orders</span>
                                    </a>
                                    <a href="/users/change-password"
                                        class="nav-link text-white d-flex align-items-center justify-content-center py-3"
                                        data-bs-toggle="tooltip" data-bs-placement="bottom"
                                        title="Change your password">
                                        <i class="fas fa-key fa-lg me-2"></i>
                                        <span class="fw-semibold">Change Password</span>
                                    </a>
                                </nav>
                            </div>
                        </div>

                        <!-- Success/Error Messages -->
                        <% if (typeof successMessage !=='undefined' && successMessage) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                <%= successMessage %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            <% } %>

                                <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        <%= errorMessage %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                    <% } %>

                                        <!-- Users Table -->
                                        <div class="card shadow-sm border-0 user-card">
                                            <div class="card-header bg-gradient-primary text-white border-0 py-3">
                                                <h5 class="mb-0">
                                                    <i class="fas fa-list me-2"></i>
                                                    Users List
                                                </h5>
                                            </div>
                                            <div class="card-body p-0">
                                                <% if (users && users.length> 0) { %>
                                                    <div class="table-responsive">
                                                        <table class="table table-hover mb-0">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th class="px-4 py-3">
                                                                        <i class="fas fa-user me-2 text-primary"></i>
                                                                        User
                                                                    </th>
                                                                    <th class="px-4 py-3">
                                                                        <i class="fas fa-store me-2 text-primary"></i>
                                                                        Assigned Store
                                                                    </th>
                                                                    <th class="px-4 py-3">
                                                                        <i
                                                                            class="fas fa-toggle-on me-2 text-primary"></i>
                                                                        Status
                                                                    </th>
                                                                    <th class="px-4 py-3">
                                                                        <i class="fas fa-crown me-2 text-primary"></i>
                                                                        Role
                                                                    </th>
                                                                    <th class="px-4 py-3">
                                                                        <i class="fas fa-cogs me-2 text-primary"></i>
                                                                        Actions
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% users.forEach(function(userItem) { %>
                                                                    <tr style="transition: all 0.3s ease;">
                                                                        <td class="px-4 py-3">
                                                                            <div class="d-flex align-items-center">
                                                                                <div class="user-avatar">
                                                                                    <%= userItem.username.charAt(0).toUpperCase()
                                                                                        %>
                                                                                </div>
                                                                                <div>
                                                                                    <div class="fw-semibold">
                                                                                        <%= userItem.username %>
                                                                                    </div>
                                                                                    <small class="text-muted">
                                                                                        ID: <%= userItem.id %>
                                                                                    </small>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                        <td class="px-4 py-3">
                                                                            <% if (userItem.assignedStore) { %>
                                                                                <div class="badge bg-info p-2">
                                                                                    <i class="fas fa-store me-1"></i>
                                                                                    <%= userItem.assignedStore.wp_store_name
                                                                                        %>
                                                                                </div>
                                                                                <br><small class="text-muted mt-1">
                                                                                    Store ID: <%=
                                                                                        userItem.assignedStore.wp_store_url
                                                                                        %>
                                                                                </small>
                                                                                <% } else { %>
                                                                                    <span class="text-muted">
                                                                                        <i
                                                                                            class="fas fa-minus me-1"></i>
                                                                                        No store assigned
                                                                                    </span>
                                                                                    <% } %>
                                                                        </td>
                                                                        <td class="px-4 py-3">
                                                                            <% if (userItem.isActive) { %>
                                                                                <span class="badge status-active p-2">
                                                                                    <i class="fas fa-check me-1"></i>
                                                                                    Active
                                                                                </span>
                                                                                <% } else { %>
                                                                                    <span
                                                                                        class="badge status-inactive p-2">
                                                                                        <i
                                                                                            class="fas fa-pause me-1"></i>
                                                                                        Inactive
                                                                                    </span>
                                                                                    <% } %>
                                                                        </td>
                                                                        <td class="px-4 py-3">
                                                                            <% if (userItem.isSuperadmin) { %>
                                                                                <span
                                                                                    class="badge bg-gradient bg-danger p-2">
                                                                                    <i class="fas fa-crown me-1"></i>
                                                                                    Super Admin
                                                                                </span>
                                                                                <% } else { %>
                                                                                    <span
                                                                                        class="badge bg-gradient bg-primary p-2">
                                                                                        <i class="fas fa-user me-1"></i>
                                                                                        Standard User
                                                                                    </span>
                                                                                    <% } %>
                                                                        </td>
                                                                        <td class="px-4 py-3">
                                                                            <div class="action-buttons" role="group">
                                                                                <a href="/users/edit/<%= userItem.id %>"
                                                                                    class="btn btn-outline-primary btn-sm"
                                                                                    data-bs-toggle="tooltip"
                                                                                    data-bs-placement="top"
                                                                                    title="Edit user">
                                                                                    <i class="fas fa-edit"></i>
                                                                                </a>
                                                                                <% if (!userItem.isSuperadmin) { %>
                                                                                    <% if (userItem.isActive) { %>
                                                                                        <button type="button"
                                                                                            class="btn btn-outline-warning btn-sm"
                                                                                            onclick="toggleUserStatus('<%= userItem.id %>', '<%= userItem.username %>', false)"
                                                                                            data-bs-toggle="tooltip"
                                                                                            data-bs-placement="top"
                                                                                            title="Deactivate user">
                                                                                            <i class="fas fa-pause"></i>
                                                                                        </button>
                                                                                        <% } else { %>
                                                                                            <button type="button"
                                                                                                class="btn btn-outline-success btn-sm"
                                                                                                onclick="toggleUserStatus('<%= userItem.id %>', '<%= userItem.username %>', true)"
                                                                                                data-bs-toggle="tooltip"
                                                                                                data-bs-placement="top"
                                                                                                title="Activate user">
                                                                                                <i
                                                                                                    class="fas fa-play"></i>
                                                                                            </button>
                                                                                            <% } %>
                                                                                                <% } else { %>
                                                                                                    <span
                                                                                                        class="badge bg-info p-2">
                                                                                                        <i
                                                                                                            class="fas fa-shield-alt me-1"></i>
                                                                                                        Protected
                                                                                                    </span>
                                                                                                    <% } %>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                    <% }); %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="text-center py-5">
                                                            <div class="mb-4">
                                                                <i class="fas fa-users text-primary"
                                                                    style="font-size: 4rem; opacity: 0.3;"></i>
                                                            </div>
                                                            <h4 class="text-muted">No Users Found</h4>
                                                            <p class="text-muted">Get started by adding your first user
                                                                to the
                                                                system.</p>
                                                            <a href="/users/add"
                                                                class="btn btn-gradient btn-primary px-4 py-2">
                                                                <i class="fas fa-plus me-2"></i>
                                                                Add First User
                                                            </a>
                                                        </div>
                                                        <% } %>
                                            </div>
                                        </div>
                    </div>
                </div>
            </div>

            <!-- User Status Toggle Confirmation Modal -->
            <div class="modal fade" id="statusToggleModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="statusModalTitle">Confirm Status Change</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body" id="statusModalBody">
                            <p>Are you sure you want to <span id="statusAction">activate</span> user <strong
                                    id="statusUserName"></strong>?</p>
                            <p class="text-info mb-0" id="statusDescription">This user will be able to access the
                                system.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="confirmStatusToggle">
                                <i class="fas fa-toggle-on me-1"></i>Confirm
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Toast container for notifications -->
            <div class="toast-container position-fixed top-0 end-0 p-3" id="toast-container">
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/toast-utils.js"></script>
            <script src="/js/bootstrap-init.js"></script>
            <script src="/js/user-management.js"></script>
</body>

</html>