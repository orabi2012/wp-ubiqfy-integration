<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'Purchase Orders' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/common.css" rel="stylesheet">
    <link href="/css/edit-page.css" rel="stylesheet">
    <link href="/css/modern-nav.css" rel="stylesheet">
    <link href="/css/navbar.css" rel="stylesheet">
    <link href="/css/purchases.css" rel="stylesheet">
</head>
<% const sandboxClass=((typeof store !=='undefined' && store && store.ubiqfy_sandbox===true) || (typeof
    sandboxEnvironment !=='undefined' && sandboxEnvironment===true)) ? 'sandbox-environment' : '' ; %>
    </head>

    <body class="<%= sandboxClass %>">
        <% const pageTitle="Purchase Orders" %>
            <%- include('../shared/navbar') %>

                <div class="container-fluid mt-2 px-3">
                    <div class="row">
                        <div class="col-12">
                            <!-- Modern Navigation Bar -->
                            <div class="card shadow-sm border-0 mb-4">
                                <div class="card-body p-0">
                                    <div class="bg-gradient-primary text-white p-3 rounded-top">
                                        <div class="row align-items-center">
                                            <div class="col">
                                                <h4 class="mb-0">
                                                    <i class="fas fa-shopping-cart me-2"></i>
                                                    Purchase Orders Management
                                                </h4>
                                            </div>
                                            <div class="col-auto">
                                                <a href="/purchase-orders/create" class="btn btn-light btn-sm">
                                                    <i class="fas fa-plus me-1"></i>
                                                    Create Order
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <nav class="nav nav-pills nav-fill modern-nav">
                                        <a href="/clients"
                                            class="nav-link text-white d-flex align-items-center justify-content-center py-3"
                                            data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Manage wp stores">
                                            <i class="fas fa-store fa-lg me-2"></i>
                                            <span class="fw-semibold">Stores</span>
                                        </a>
                                        <a href="/users"
                                            class="nav-link text-white d-flex align-items-center justify-content-center py-3"
                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage users">
                                            <i class="fas fa-users fa-lg me-2"></i>
                                            <span class="fw-semibold">Users</span>
                                        </a>
                                        <a href="/purchase-orders"
                                            class="nav-link text-white d-flex align-items-center justify-content-center py-3 active"
                                            data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Manage purchase orders">
                                            <i class="fas fa-shopping-cart fa-lg me-2"></i>
                                            <span class="fw-semibold">Purchase Orders</span>
                                        </a>
                                        <a href="/users/change-password"
                                            class="nav-link text-white d-flex align-items-center justify-content-center py-3"
                                            data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Change your password">
                                            <i class="fas fa-key fa-lg me-2"></i>
                                            <span class="fw-semibold">Change Password</span>
                                        </a>
                                    </nav>
                                </div>
                            </div>

                            <!-- Statistics Cards -->
                            <div class="row mb-4">
                                <div class="col-xl-3 col-md-6 mb-3">
                                    <div class="card stats-card h-100">
                                        <div class="card-body text-center">
                                            <div class="display-6 mb-2">
                                                <i class="fas fa-shopping-cart"></i>
                                            </div>
                                            <h3 class="mb-1">
                                                <%= stats && stats.total || 0 %>
                                            </h3>
                                            <p class="mb-0">Total Orders</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6 mb-3">
                                    <div class="card stats-card h-100">
                                        <div class="card-body text-center">
                                            <div class="display-6 mb-2">
                                                <i class="fas fa-check-circle"></i>
                                            </div>
                                            <h3 class="mb-1">
                                                <%= stats && stats.completed || 0 %>
                                            </h3>
                                            <p class="mb-0">Completed</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6 mb-3">
                                    <div class="card stats-card h-100">
                                        <div class="card-body text-center">
                                            <div class="display-6 mb-2">
                                                <i class="fas fa-clock"></i>
                                            </div>
                                            <h3 class="mb-1">
                                                <%= stats && stats.pending || 0 %>
                                            </h3>
                                            <p class="mb-0">Pending</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6 mb-3">
                                    <div class="card stats-card h-100">
                                        <div class="card-body text-center">
                                            <div class="display-6 mb-2">
                                                <i class="fas fa-dollar-sign"></i>
                                            </div>
                                            <h3 class="mb-1">$<%= stats && stats.totalValue || 0 %>
                                            </h3>
                                            <p class="mb-0">Total Value</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Success/Error Messages -->
                            <% if (typeof successMessage !=='undefined' && successMessage) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <%= successMessage %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>

                                    <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="fas fa-exclamation-circle me-2"></i>
                                            <%= errorMessage %>
                                                <button type="button" class="btn-close"
                                                    data-bs-dismiss="alert"></button>
                                        </div>
                                        <% } %>

                                            <!-- Purchase Orders Table -->
                                            <div class="card shadow-sm border-0 purchase-card">
                                                <div class="card-header bg-gradient-primary text-white border-0 py-3">
                                                    <h5 class="mb-0">
                                                        <i class="fas fa-list me-2"></i>
                                                        Purchase Orders List
                                                    </h5>
                                                </div>
                                                <div class="card-body p-0">
                                                    <% if (purchaseOrders && purchaseOrders.length> 0) { %>
                                                        <div class="table-responsive">
                                                            <table class="table table-hover mb-0">
                                                                <thead class="table-light">
                                                                    <tr>
                                                                        <th class="border-0">Order</th>
                                                                        <th class="border-0">Store</th>
                                                                        <th class="border-0">Date</th>
                                                                        <th class="border-0">Items</th>
                                                                        <th class="border-0">Total Value</th>
                                                                        <th class="border-0">Status</th>
                                                                        <th class="border-0 text-center">Actions</th>
                                                                    </tr>
                                                                </thead>
                                                                <!-- Include Shared Navbar -->
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <div class="purchase-avatar">
                                                                            <i class="fas fa-receipt"></i>
                                                                        </div>
                                                                        <div>
                                                                            <div class="fw-bold">
                                                                                #<%= order.purchase_order_number ||
                                                                                    order.id.substring(0, 8) %>
                                                                            </div>
                                                                            <small class="text-muted">
                                                                                ID: <%= order.id.substring(0, 8) %>...
                                                                            </small>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="fw-semibold">
                                                                        <%= order.storeName || 'Unknown Store' %>
                                                                    </div>
                                                                    <small class="text-muted">Store ID: <%=
                                                                            order.store_id %></small>
                                                                </td>
                                                                <td>
                                                                    <div>
                                                                        <%= new
                                                                            Date(order.created_at).toLocaleDateString()
                                                                            %>
                                                                    </div>
                                                                    <small class="text-muted">
                                                                        <%= new
                                                                            Date(order.created_at).toLocaleTimeString()
                                                                            %>
                                                                    </small>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-info rounded-pill">
                                                                        <%= order.itemCount || 0 %> items
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <div class="fw-bold text-success">
                                                                        $<%= (parseFloat(order.total_wholesale_cost) ||
                                                                            0).toFixed(2) %>
                                                                    </div>
                                                                    <small class="text-muted">
                                                                        <%= order.currency || 'USD' %>
                                                                    </small>
                                                                </td>
                                                                <td>
                                                                    <span
                                                                        class="badge status-<%= order.status.toLowerCase() %> text-white px-3 py-2 rounded-pill">
                                                                        <%= order.status %>
                                                                    </span>
                                                                </td>
                                                                <td class="text-center">
                                                                    <div class="action-buttons">
                                                                        <a href="/purchase-orders/<%= order.id %>"
                                                                            class="btn btn-sm btn-outline-primary"
                                                                            data-bs-toggle="tooltip"
                                                                            title="View Details">
                                                                            <i class="fas fa-eye"></i>
                                                                        </a>
                                                                        <% if (order.status==='DRAFT' ) { %>
                                                                            <a href="/purchase-orders/<%= order.id %>/edit"
                                                                                class="btn btn-sm btn-outline-warning"
                                                                                data-bs-toggle="tooltip"
                                                                                title="Edit Order">
                                                                                <i class="fas fa-edit"></i>
                                                                            </a>
                                                                            <% } %>
                                                                                <% if (order.status==='DRAFT' ||
                                                                                    order.status==='PENDING' ) { %>
                                                                                    <button
                                                                                        class="btn btn-sm btn-outline-danger"
                                                                                        onclick="cancelOrder('<%= order.id %>', '#<%= order.purchase_order_number || order.id.substring(0, 8) %>')"
                                                                                        data-bs-toggle="tooltip"
                                                                                        title="Cancel Order">
                                                                                        <i class="fas fa-times"></i>
                                                                                    </button>
                                                                                    <% } %>
                                                                    </div>
                                                                </td>
                                                                </tr>
                                                                <% }); %>
                                                                    </tbody>
                                                            </table>
                                                        </div>
                                                        <% } else { %>
                                                            <div class="text-center py-5">
                                                                <div class="mb-4">
                                                                    <i class="fas fa-shopping-cart text-primary"
                                                                        style="font-size: 4rem; opacity: 0.3;"></i>
                                                                </div>
                                                                <h4 class="text-muted">No Purchase Orders Found</h4>
                                                                <p class="text-muted">Get started by creating your first
                                                                    purchase
                                                                    order.</p>
                                                                <a href="/purchase-orders/create"
                                                                    class="btn btn-gradient btn-primary px-4 py-2">
                                                                    <i class="fas fa-plus me-2"></i>Create Purchase
                                                                    Order
                                                                </a>
                                                            </div>
                                                            <% } %>
                                                </div>
                                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cancel Order Confirmation Modal -->
                <div class="modal fade" id="cancelOrderModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Cancel Purchase Order</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to cancel order <strong id="cancelOrderNumber"></strong>?</p>
                                <p class="text-warning mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    This action cannot be undone. The order will be marked as cancelled.
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep
                                    Order</button>
                                <button type="button" class="btn btn-danger" id="confirmCancelOrder">
                                    <i class="fas fa-times me-1"></i>Cancel Order
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Toast container for notifications -->
                <div class="toast-container position-fixed top-0 end-0 p-3" id="toast-container">
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="/js/toast-utils.js"></script>
                <script src="/js/bootstrap-init.js"></script>
                <script src="/js/purchase-order-management.js"></script>

</html>